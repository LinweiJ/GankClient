<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
>

	<ImageView
		android:layout_width="@dimen/material_80dp"
		android:layout_height="@dimen/material_80dp"
		android:src="@drawable/icon_empty_default"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ProgressBar
			android:id="@+id/progressBar"
			style="@style/RvLoadingProgressBar"
			android:layout_width="@dimen/material_20dp"
			android:layout_height="@dimen/material_20dp"
			android:layout_marginRight="@dimen/material_8dp"/>
		<TextView
			style="@style/textView_hint_14"
			android:text="@string/w_loading_data"
		/>
	</LinearLayout>

</LinearLayout>